---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
	<channel>
		<title>{{ site.name | xml_escape }}</title>
		<description>{% if site.description %}{{ site.description | xml_escape }}{% endif %}</description>		
		<link>http://{{ site.url }}</link>
		<atom:link href="http://{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
		{% for post in site.posts limit:10 %}
			<item>
				<title>Review: {{ post.title | xml_escape }}</title>
				<image>
  				<url>http://www.dearcastandcrew.com/assets/img/posts/thumb-600/{{post.image | xml_escape}}</url>
        </image>
				<description>Dear {{post.addressee | xml_escape }}, {{post.position | xml_escape }}, &lt;br /&gt;
  				{{ post.content | xml_escape }}</description>
				<pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
				<link>http://{{ site.url }}{{ post.url }}</link>
				<guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
			</item>
		{% endfor %}
	</channel>
</rss>
